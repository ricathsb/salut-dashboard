generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pendaftaran {
  id                String   @id @default(uuid())
  namaLengkap       String
  nik               String   @unique
  nisn              String?  @unique
  noHp              String
  email             String   @unique
  tanggalLahir      DateTime
  alamat            String
  fakultas          String
  programStudi      String
  jenjang           String
  jalur             String
  pasFoto           String?
  ktp               String?
  ijazah            String?
  formulir          String?
  ijazahSMA         String?
  screenshotPDDIKTI String?
  skPengangkatan    String?
  skMengajar        String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("pendaftaran")
}

model fakultas {
  id          String   @id
  nama        String   @unique
  namaLengkap String
  deskripsi   String?
  akreditasi  String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model kontak_pesan {
  id        String   @id
  name      String
  email     String
  phone     String
  message   String
  status    String   @default("unread")
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model program_studi {
  id            String   @id
  nama          String
  fakultas      String
  jenjang       String
  akreditasi    String
  biayaSemester Int
  deskripsi     String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime
}

model audit_log {
  id        String   @id
  action    String
  table     String
  recordId  String
  oldData   Json?
  newData   Json?
  userId    String?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
}

model dokumen_pendaftaran {
  id                String   @id
  pendaftaranId     String
  namaFile          String
  jenisFile         String
  urlCloudinary     String
  publicId          String
  ukuranFile        Int
  tipeFile          String
  statusVerifikasi  String   @default("pending")
  catatanVerifikasi String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime
}

model validasi_data {
  id        String   @id
  field     String
  value     String
  isValid   Boolean
  message   String?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
}

model brosur {
  id        String   @id @default(uuid())
  imageUrl  String
  linkUrl   String
  aktif     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Berita {
  id              String   @id @default(cuid())
  judul           String
  slug            String   @unique
  konten          String
  gambar          String
  linkUrl         String?
  jenis           String   // "internal" or "eksternal"
  excerpt         String?
  metaTitle       String?
  metaDescription String?
  tags            String?
  author          String?
  tanggal         String
  aktif           Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

@@map("berita")
}